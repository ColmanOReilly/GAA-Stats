  <?php
 ///////////////////////////////////////////////////////
 // TO SELECT THE NAME OF PERSON CHOOSEN FOR CHAMIONSHIP
 if(isset($_POST['Championship']))
{ 
include("Connection.php");
$LID = ($_POST['id']);
$YEAR = ($_POST['year']);
echo "Player Selected is ";
$result = mysqli_query($conn,"CALL `Show_Player_Toupdate`('$LID')");
//$conn, "select First_Name, Second_Name from shanballymore.player_id where Player_ID = ('$LID') ");
$num=mysqli_num_rows($result);
	
	if ($result)
	{
	//A non NULL value is entered as the selection criteria
	//The QUERY can be processed

		if ($num) //If an empty recordset has not been returned
		{
		
		
		$j=0;
while ($row = mysqli_fetch_array($result)) 
			{
			
			echo $row['0']; 
			echo "&nbsp";
			echo $row['1'];
			
			$j++;
			
			}
			
			echo "<br />";
			echo "The Year is ".$YEAR;
			echo "<br />";
			
			}
		}
		mysqli_close($conn);
  }
