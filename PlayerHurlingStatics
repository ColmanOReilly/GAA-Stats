{
 include("Connection.php");
$LID = ($_POST['id']);
$YEAR = ($_POST['year']);
$result = mysqli_query($conn, "select Sum(Goal)  
from shanballymore.Player_stats, shanballymore.fixtures
where Player_stats.Player_ID_Player_ID = '$LID' 
and Player_stats.Fixtures_GameID = fixtures.GameID
 and fixtures.Hurling = 'yes' and Championship = 'yes' and Year = $YEAR ");
$num=mysqli_num_rows($result);
echo "<br/>Goals Scored = ";
     if ($num) //If an empty recordset has not been returned
		{
				$j=0;
while ($row = mysqli_fetch_array($result)) 
			{
			
			echo $row['0']; 
	
			$j++;
			}
			
}
			mysqli_close($conn);
}
